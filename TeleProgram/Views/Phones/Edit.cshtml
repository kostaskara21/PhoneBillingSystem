@model TeleProgram.Models.Phones

@{
    ViewData["Title"] = "Edit";
}
@{
    var Nofound = TempData["NotFound"];
    var CompleteChange = TempData["Complete"];
}
@if (Nofound != null)
{
    <div class="alert alert-danger">
        @Nofound
    </div>
}
@if (CompleteChange != null)
{
    <div class="alert alert-success">
        @CompleteChange
    </div>
}


<h1 class="text-center my-4">Edit Phone</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-center mb-3">Phone Details</h4>
                    <hr />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PhoneNumber" />

                        <!-- Program Name Dropdown -->
                        <div class="form-floating mb-3">
                            <select asp-for="ProgrameName" class="form-control" asp-items="ViewBag.ProgrameName"></select>
                            <label asp-for="ProgrameName">Program Name</label>
                            <span asp-validation-for="ProgrameName" class="text-danger"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Save</button>
                        </div>
                    </form>

                    <!-- Back to List Link -->
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
