@model TeleProgram.Models.Phones

@{
    ViewData["Title"] = "Create";
}
@{
    var successMessage = TempData["NotError"];
    var errorMessage = TempData["Error"];
    var errorMessage1 = TempData["error1"];
    var userregsiterSucces = TempData["ComeFromRegister"];
   
}
@if (userregsiterSucces != null)
{
    <div class="alert alert-success">
        @userregsiterSucces
    </div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger">
        @errorMessage  
    </div>
}
@if (errorMessage1 != null)
{
    <div class="alert alert-danger">
        @errorMessage1
    </div>
}


<h1>Assign Phone To New user</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">Create Phone Record</h2>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Phone Number -->
                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Program Name Dropdown -->
                        <div class="form-floating mb-3">
                            <select asp-for="ProgrameName" class="form-control" asp-items="ViewBag.ProgrameName"></select>
                            <label asp-for="ProgrameName">Program Name</label>
                        </div>

                        <!-- User ID -->
                        <div class="form-floating mb-3">
                            <input asp-for="UserId" class="form-control" placeholder="Enter User ID" />
                            <label asp-for="UserId">User ID</label>
                        </div>

                        <!-- Create Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Create</button>
                        </div>
                    </form>

                    <!-- Back to List Button -->
                    <div class="text-center mt-3">
                        <form asp-action="Index" asp-controller="Home">
                            <button type="submit" class="btn btn-outline-secondary">Back to List</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
