@model TeleProgram.Models.Programs

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Program Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Program Information</h4>
            <hr />
            <dl class="row">
                <!-- Description -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <!-- Charge -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Charge)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Charge)
                </dd>
            </dl>

            <div class="text-center mt-4">
                <!-- Edit Button -->
                <form asp-action="Edit" asp-route-id="@Model?.ProgrameName" method="get" class="d-inline">
                    <button type="submit" class="btn btn-info btn-lg">Edit</button>
                </form>

                <!-- Back to List Button -->
                <form asp-action="Index" method="get" class="d-inline">
                    <button type="submit" class="btn btn-success btn-lg">Back to List</button>
                </form>
            </div>
        </div>
    </div>
</div>
