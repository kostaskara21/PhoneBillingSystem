@model IEnumerable<TeleProgram.Models.Programs>

@{
    ViewData["Title"] = "Available Programs";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Available Programs</h1>

   

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProgrameName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Charge)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProgrameName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Charge)</td>
                        <td class="text-center">
                            <!-- Button for Editing Program   -->
                            <form asp-action="Edit" asp-route-id="@item.ProgrameName" method="get" class="d-inline">
                                <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                            </form>
                            <!-- Button for Seing Details of a  Program   -->
                            <form asp-action="Details" asp-route-id="@item.ProgrameName" method="get" class="d-inline">
                                <button type="submit" class="btn btn-info btn-sm">Details</button>
                            </form>
                            <!-- Button for Deleting  Program   -->
                            <form asp-action="Delete" asp-route-id="@item.ProgrameName" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this program?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="text-end mt-4">
            <form asp-action="Create" method="get" class="d-inline">
                <button type="submit" class="btn btn-success btn-lg">Create New Program</button>
            </form>
        </div>
    </div>
