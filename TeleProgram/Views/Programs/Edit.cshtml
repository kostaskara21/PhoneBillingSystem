@model TeleProgram.Models.Programs

@{
    ViewData["Title"] = "Edit Program";
}

<h4 class="text-center my-4">@ViewData["Title"]</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProgrameName" />

                <!-- Description Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" id="Description" placeholder="Description" />
                    <label for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Charge Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Charge" class="form-control" id="Charge" placeholder="Charge" />
                    <label for="Charge">Charge</label>
                    <span asp-validation-for="Charge" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>

            <!-- Back to List Button -->
            <div class="text-center mt-3">
                <form asp-action="Index" method="get" class="d-inline">
                    <button type="submit" class="btn btn-success btn-lg">Back to List</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
